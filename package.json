{
  "name": "voxelize",
  "license": "MIT",
  "private": true,
  "scripts": {
    "watch": "pnpm build:wasm:release && npm-run-all --parallel watch:ts watch:wasm",
    "watch:ts": "pnpm -r --parallel --filter \"@voxelize/*\" watch",
    "watch:wasm": "cargo watch -w crates/wasm-mesher/src -w crates/mesher/src -w crates/core/src -s 'pnpm build:wasm:release'",
    "demo": "pnpm run build:wasm:dev && npm-run-all --parallel \"demo:ts\" \"demo:rs\"",
    "check:dev-env": "node ./check-dev-env.mjs",
    "check:dev-env:json": "node ./check-dev-env.mjs --json",
    "check:dev-env:json:compact": "node ./check-dev-env.mjs --json --compact",
    "check:wasm-pack": "node ./check-wasm-pack.mjs",
    "check:wasm-pack:json": "node ./check-wasm-pack.mjs --json",
    "check:wasm-pack:json:compact": "node ./check-wasm-pack.mjs --json --compact",
    "check:preflight:json": "node ./check-preflight.mjs",
    "check:preflight:verify:json": "node ./check-preflight.mjs --no-build",
    "check:preflight:json:compact": "node ./check-preflight.mjs --compact",
    "check:preflight:verify:json:compact": "node ./check-preflight.mjs --no-build --compact",
    "check:preflight:all:json": "node ./check-preflight.mjs --only all",
    "check:preflight:all:verify:json": "node ./check-preflight.mjs --no-build --only all",
    "check:preflight:all:json:compact": "node ./check-preflight.mjs --only all --compact",
    "check:preflight:all:verify:json:compact": "node ./check-preflight.mjs --no-build --only all --compact",
    "check:preflight:all-checks:json": "node ./check-preflight.mjs --only all-checks",
    "check:preflight:all-checks:verify:json": "node ./check-preflight.mjs --no-build --only all-checks",
    "check:preflight:all-checks:json:compact": "node ./check-preflight.mjs --only all-checks --compact",
    "check:preflight:all-checks:verify:json:compact": "node ./check-preflight.mjs --no-build --only all-checks --compact",
    "check:preflight:dev-env:json": "node ./check-preflight.mjs --only devEnvironment",
    "check:preflight:dev-env:json:compact": "node ./check-preflight.mjs --only devEnvironment --compact",
    "check:preflight:dev:json": "node ./check-preflight.mjs --only devEnvironment",
    "check:preflight:dev:json:compact": "node ./check-preflight.mjs --only devEnvironment --compact",
    "check:preflight:wasm-pack:json": "node ./check-preflight.mjs --only wasmPack",
    "check:preflight:wasm-pack:json:compact": "node ./check-preflight.mjs --only wasmPack --compact",
    "check:preflight:wasm:json": "node ./check-preflight.mjs --only wasmPack",
    "check:preflight:wasm:json:compact": "node ./check-preflight.mjs --only wasmPack --compact",
    "check:preflight:client:json": "node ./check-preflight.mjs --only client",
    "check:preflight:client:json:compact": "node ./check-preflight.mjs --only client --compact",
    "check:preflight:client:verify:json": "node ./check-preflight.mjs --no-build --only client",
    "check:preflight:client:verify:json:compact": "node ./check-preflight.mjs --no-build --only client --compact",
    "build:wasm": "node ./check-wasm-pack.mjs && cd crates/wasm-mesher && wasm-pack build --target web",
    "build:wasm:dev": "node ./check-wasm-pack.mjs && cd crates/wasm-mesher && wasm-pack build --target web --dev",
    "build:wasm:release": "node ./check-wasm-pack.mjs && cd crates/wasm-mesher && wasm-pack build --target web --release",
    "build": "pnpm build:wasm && cd packages && pnpm -r --workspace-concurrency=1 --filter \"@voxelize/*\" --filter \"!@voxelize/core\" build && cd core && pnpm build",
    "demo:ts": "cd examples/client && pnpm demo",
    "demo:rs": "cross-env RUST_BACKTRACE=1 cargo watch -w examples/server -w server -x \"run --release --example demo\"",
    "test-dev": "cross-env VITE_CJS_IGNORE_WARNING=true vitest",
    "test": "cross-env VITE_CJS_IGNORE_WARNING=true vitest --run",
    "test:scripts": "cross-env VITE_CJS_IGNORE_WARNING=true vitest --run test/script-checks.test.ts test/script-aliases.test.ts test/command-utils.test.ts test/dev-env-utils.test.ts test/report-utils.test.ts test/client-wasm-preflight.test.ts test/preflight-report.test.ts",
    "typecheck:client": "pnpm --filter client run typecheck",
    "check:client:wasm": "pnpm --filter client run check:wasm",
    "check:client": "node ./check-client.mjs",
    "check:client:json": "node ./check-client.mjs --json",
    "check:client:json:compact": "node ./check-client.mjs --json --compact",
    "check:client:verify": "node ./check-client.mjs --no-build",
    "check:client:verify:json": "node ./check-client.mjs --json --no-build",
    "check:client:verify:json:compact": "node ./check-client.mjs --json --no-build --compact",
    "check:onboarding": "node ./check-onboarding.mjs",
    "check:onboarding:json": "node ./check-onboarding.mjs --json",
    "check:onboarding:json:compact": "node ./check-onboarding.mjs --json --compact",
    "check:onboarding:verify": "node ./check-onboarding.mjs --no-build",
    "check:onboarding:verify:json": "node ./check-onboarding.mjs --json --no-build",
    "check:onboarding:verify:json:compact": "node ./check-onboarding.mjs --json --no-build --compact",
    "test:rust": "cargo test --test mesher_tests --test lights_tests",
    "test:rust:all": "cargo test --lib --tests",
    "bench": "cargo bench --bench mesher_bench --bench lights_bench",
    "bench:mesher": "cargo bench --bench mesher_bench",
    "bench:lights": "cargo bench --bench lights_bench",
    "bench:report": "open target/criterion/report/index.html",
    "check": "cargo check --all-targets",
    "lint": "eslint --fix --ext js,ts,tsx .",
    "docs": "cd docs && pnpm run start",
    "proto": "cd packages/protocol && pnpm run proto",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@swc/core": "^1.11.11",
    "@types/domurl": "^0.0.7",
    "@types/events": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lerna": "^6.6.2",
    "lint-staged": "^15.0.0",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "peer": "^0.6.1",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "typescript": "^5.4.5",
    "vite": "^5.4.14",
    "vite-plugin-externalize-deps": "^0.8.0",
    "vite-plugin-glsl": "^1.3.3",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.9.0",
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
